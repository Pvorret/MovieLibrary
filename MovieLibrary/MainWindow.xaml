<Window x:Class="MovieLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieLibrary"
        mc:Ignorable="d"
        Title="Movie Library" Height="225" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="Title_Label" Content="Movie Library" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top" FontSize="20" Foreground="Black"/>
        <Button x:Name="AddMovie_Button" Content="Tilføj Film" HorizontalAlignment="Left" Margin="59,62,0,0" VerticalAlignment="Top" Width="75" Click="AddMovie_Button_Click"/>
        <Button x:Name="ViewMovies_Button" Content="Alle Film" HorizontalAlignment="Left" Margin="59,102,0,0" VerticalAlignment="Top" Width="75" Click="ViewMovies_Button_Click"/>
        <Button x:Name="Exit_Button" Content="Afslut" HorizontalAlignment="Left" Margin="59,142,0,0" VerticalAlignment="Top" Width="75" Click="Exit_Button_Click"/>

    </Grid>
</Window>
